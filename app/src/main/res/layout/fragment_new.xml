<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kodluyoruz.com.bveritasimafragmentactivity.NewFragment">

    <EditText
        android:id="@+id/fragment_new_edtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Adınız:" />

    <EditText
        android:id="@+id/fragment_new_edtSurname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Soyadınız:" />

    <EditText
        android:id="@+id/fragment_new_edtNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kimlik Numaranız:" />

    <Button
        android:id="@+id/fragment_new_btnSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activity'ye Gönder" />

</LinearLayout>
